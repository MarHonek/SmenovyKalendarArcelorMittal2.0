<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/calendar_day_layout"
    android:layout_height="match_parent"
    android:background="@color/caldroid_darker_gray">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:id="@+id/imageView_note"
            android:background="@drawable/cicrle"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_gravity="right" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/textView_date"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:textStyle="bold"
            android:layout_gravity="right" />


    </LinearLayout>







    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L"
        android:id="@+id/textView_shift"
        android:paddingBottom="10dp"
        android:layout_gravity="center_horizontal" />



    <ImageView
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:id="@+id/imageView_holiday"
        android:background="@color/caldroid_holo_blue_light"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_gravity="right" />



</LinearLayout>